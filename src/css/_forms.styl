// Form stuff

.field
	margin-bottom: 40px
	width 100%
	
	label
		display block
		font-weight bold
		margin-bottom 10px
		
		small
			display block
			color #888888
			font-style italic
			font-weight normal
			line-height: 20px

	textarea
		width 100%
		height 200px
		font-family 'Courier'

.form-buttons
	text-align center
	
	button
		margin 0 auto
		border 0
		border-radius 3px
		padding 10px 15px
		color #FFFFFF
		background #5CC200
		
		&:hover,
		&:active,
		&:disabled
			background #79D045
			color #FFFFFF